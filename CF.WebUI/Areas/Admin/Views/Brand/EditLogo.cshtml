@model Brand
@{
    ViewBag.Title = "Logo Düzenleme";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}


<section class="panel">
    <header class="panel-heading">
        @ViewBag.Title
    </header>
    <div class="panel-body">
        @using (Html.BeginForm("EditLogo", "Brand", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">Marka</label>
                <div class="col-lg-9">
                    @Model.BrandName
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.LogoImagePath, new { @class = "col-lg-3 col-sm-3 control-label" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.LogoImagePath, new { @class = "form-control", type = "file" })
                    <span class="text-danger">@ViewBag.ErrorImage</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <button type="submit" class="btn btn-success">Logoyu Güncelle</button>
                </div>
            </div>
        }
    </div>
</section>

@section Styles{
    <link href="~/Content/CommonTheme/css/image-zoom.css" rel="stylesheet" />
}