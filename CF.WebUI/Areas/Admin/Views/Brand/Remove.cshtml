@model Brand
@{
    ViewBag.Title = "Marka Sil";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}


<section class="panel">
    <header class="panel-heading">
        @ViewBag.Title
    </header>
    <div class="panel-body">
        @using (Html.BeginForm("Remove", "Brand", FormMethod.Post, new { @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">Marka</label>
                <div class="col-lg-9">
                    @Model.BrandName
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-9">
                    <button type="submit" class="btn btn-danger">Markayı Sil</button>
                </div>
            </div>
        }
    </div>
</section>